@model IEnumerable<Integration.ViewModels.managerPersonal_ViewModel>
@{
    ViewData["Title"] = "Information Employee";
}
<div class="col-12">
    <div class="bg-light rounded h-100 p-4">
        <h6 class="mb-4">Information Employee</h6>
        <div class="table-responsive">
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">First Name</th>
                        <th scope="col">Middle Name</th>
                        <th scope="col">Last Name</th>
                        <th scope="col">Email</th>
                        <th scope="col">Country</th>
                        <th scope="col">ShareHoler Status</th>
                        <th scope="col"></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <th scope="row">@item.Id</th>
                            <td>@item.FisrtName</td>
                            <td>@item.MiddleName</td>
                            <td>@item.LastName</td>
                            <td>@item.Email</td>
                            <td>@item.Country</td>
                            @if(item.Shareholder == 1)
                            {
                                <td>ShareHoler</td>
                            }
                            else
                            {
                                <td>No ShareHoler</td>
                            }
                            <td><a class="btn btn-sm btn-primary" asp-action="edit" asp-controller="managerPersonal" asp-route-id ="@item.Id">Detail</a></td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <form asp-action="addEmployee" asp-controller="managerPersonal">
            <div class="col-md-12 d-flex justify-content-end">
                <button type="submit" class="btn btn-primary m-md-1 col-md-1">Add</button>
            </div>
        </form>

    </div>

</div>

