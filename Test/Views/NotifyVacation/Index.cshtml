@{
    Layout = "_LayoutCustomer";
    ViewBag.Title = "Trang chủ";
}
@model IEnumerable<Integration.ViewModels.NotifyVacations_ViewModel>
@{
    
}
<div class="container-fluid pt-4 px-4">
    <div class="row g-4">
        <div class="col-sm-12 col-md-6 col-xl-12">
            <div class="h-100 bg-light rounded p-4">
                <div class="d-flex align-items-center justify-content-between mb-2">
                    <h6 class="mb-0">Messages</h6>
                    <a href="">Reload</a>
                </div>
                @foreach (var item in Model)
                {
                    int days = DateTime.DaysInMonth(item.Year.Value.Year,item.Month);
                    int result = 0;
                    if (days - item.Actualday <= item.Total) continue;
                    if (days - item.Actualday > item.Total )
                    {
                        result = days - item.Actualday;
                        //if (result <= 7 && result >= 0)
                    }
                    <div class="d-flex align-items-center border-bottom py-3">
                        <i class="fa fa-bell me-lg-2"></i>
                        <div class="w-100 ms-3">
                            <div class="d-flex w-100 justify-content-between">

                                <h6 class="mb-0" style="color: rgba(0, 156, 255, .7)"> Warning <span style="color:rgb(234 105 149 / 70%)"> @item.LastName @item.FisrtName</span> has gone on leave</h6>
                                <small>
                                    @result days
                                    <i class="bi bi-arrow-counterclockwise"></i>
                                </small>
                            </div>
                            <span>Warning<span>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
